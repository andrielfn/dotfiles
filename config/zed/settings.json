{
  "git_panel": {
    "dock": "right"
  },
  "outline_panel": {
    "dock": "right"
  },
  "sticky_scroll": {
    "enabled": true
  },
  "preferred_line_length": 2000,
  "soft_wrap": "editor_width",
  "colorize_brackets": false,
  "title_bar": {
    "show_menus": false,
    "show_branch_icon": false
  },
  "prettier": {
    "allowed": false
  },
  "toolbar": {
    "code_actions": false
  },
  "use_smartcase_search": true,
  "centered_layout": {
    "left_padding": 2.1999998092651367
  },
  "on_last_window_closed": "platform_default",
  "close_on_file_delete": true,
  "when_closing_with_no_tabs": "close_window",
  "edit_predictions": {
    "provider": "copilot",
    "mode": "eager",
    "copilot": {
      "enable_next_edit_suggestions": true,
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null,
    },
    "enabled_in_text_threads": false,
  },
  "agent_servers": {
    "github-copilot": {
      "type": "registry"
    },
    "claude": {
      "default_mode": "acceptEdits",
    },
  },
  "tabs": {
    "close_position": "right",
    "git_status": true,
    "file_icons": true
  },
  "show_edit_predictions": true,
  "git": {
    "inline_blame": {
      "enabled": false
    },
    "blame": {
      "show_avatar": true
    }
  },
  "icon_theme": "Catppuccin Latte",
  "ssh_connections": [
    {
      "host": "192.168.0.10",
      "username": "andrielfn",
      "projects": [
        {
          "paths": [
            "/etc"
          ]
        },
        {
          "paths": [
            "/opt"
          ]
        }
      ]
    },
    {
      "host": "192.168.0.10",
      "username": "andrielfn",
      "projects": [],
    },
  ],
  "scroll_beyond_last_line": "off",
  "features": {
    "edit_prediction_provider": "copilot",
  },
  "telemetry": {
    "metrics": false,
  },
  "agent": {
    "use_modifier_to_send": true,
    "default_model": {
      "provider": "copilot_chat",
      "model": "gpt-5-mini",
    },
  },
  "wrap_guides": [
    120
  ],
  "ui_font_size": 17,
  "theme": "Snowday",
  "buffer_font_size": 17,
  "tab_size": 2,
  "buffer_font_features": {
    "calt": false,
  },
  "buffer_font_family": "Cascadia Code NF",
  "buffer_font_weight": 200,
  "buffer_line_height": {
    "custom": 1.8,
  },
  "languages": {
    "Elixir": {
      "language_servers": [
        "expert",
        "!elixir-ls",
        "!next-ls",
        "!lexical",
        "tailwindcss-language-server",
        "emmet-language-server",
        "vscode-html-language-server"
      ]
    },
    "HEEX": {
      "language_servers": [
        "expert",
        "!elixir-ls",
        "!next-ls",
        "!lexical",
        "tailwindcss-language-server",
        "emmet-language-server",
        "vscode-html-language-server"
      ]
    }
  },
  "lsp": {
    "expert": {
      "binary": {
        "arguments": [
          "--stdio"
        ]
      }
    }
  },
  "file_scan_exclusions": [
    "**/.elixir-tools",
    "**/.elixir-tools",
    "**/_build",
    "**/deps",
    "**/.git",
    "**/.claude",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/rel",
    "**/.docker",
    "**/.nix*",
    "**/.postgres",
    "**/.lefthook",
    "**/.vscode",
    "**/.direnv",
    "**/ae_model_params",
    "**/*.ipynb"
  ],
  "file_types": {
    "JSON": [
      "prettierrc"
    ],
    "Shell Script": [
      "envrc"
    ]
  },
  "project_panel": {
    "hide_root": false,
    "git_status": true,
    "folder_icons": true,
    "entry_spacing": "comfortable",
    "auto_fold_dirs": false
  }
}
