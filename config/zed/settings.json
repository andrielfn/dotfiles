{
  "when_closing_with_no_tabs": "close_window",
  "edit_predictions": {
    "mode": "eager",
    "copilot": {
      "proxy": null,
      "proxy_no_verify": null,
      "enterprise_uri": null
    },
    "enabled_in_text_threads": false
  },
  "agent_servers": {
    "claude": {
      "default_mode": "acceptEdits"
    }
  },
  "tabs": {
    "file_icons": true
  },
  "show_edit_predictions": true,
  "git": {
    "inline_blame": {
      "enabled": false
    }
  },
  "icon_theme": "Catppuccin Latte",
  "ssh_connections": [
    {
      "host": "192.168.0.10",
      "username": "andrielfn",
      "projects": [
        {
          "paths": ["/etc"]
        },
        {
          "paths": ["/opt"]
        }
      ]
    },
    {
      "host": "192.168.0.10",
      "username": "andrielfn",
      "projects": []
    }
  ],
  "scroll_beyond_last_line": "off",
  "features": {
    "edit_prediction_provider": "copilot"
  },
  "telemetry": {
    "metrics": false
  },
  "agent": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    }
  },
  "wrap_guides": [120],
  "ui_font_size": 17,
  "theme": "Snowday",
  "buffer_font_size": 17,
  "tab_size": 2,
  "buffer_font_features": {
    "calt": false
  },
  "buffer_font_family": "Cascadia Code NF",
  "buffer_font_weight": 200,
  "buffer_line_height": {
    "custom": 1.8
  },
  "languages": {
    "Elixir": {
      "language_servers": [
        "expert",
        "!elixir-ls",
        "!next-ls",
        "!lexical",
        "tailwindcss-language-server",
        "emmet-language-server",
        "vscode-html-language-server"
      ]
    }
  },
  // "lsp": {
  //   "elixir-ls": {
  //     "settings": {
  //       "dialyzerEnabled": false
  //     }
  //   }
  // },
  "file_scan_exclusions": [
    "**/.elixir-tools",
    "**/.elixir-tools",
    "**/_build",
    "**/deps",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/node_modules",
    "**/rel",
    "**/.docker",
    "**/.nix*",
    "**/.postgres",
    "**/.lefthook",
    "**/.vscode",
    "**/.direnv",
    "**/ae_model_params"
  ],
  "file_types": {
    "JSON": ["prettierrc"],
    "Shell Script": ["envrc"]
  }
}
