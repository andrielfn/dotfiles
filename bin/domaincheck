#!/usr/bin/env bash

# Simple domain availability checker
set -e

# Colors
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
NC='\033[0m'

print_success() { printf "${GREEN}✓ %s${NC}\n" "$*"; }
print_error() { printf "${RED}✗ %s${NC}\n" "$*"; }
print_warning() { printf "${YELLOW}⚠ %s${NC}\n" "$*"; }
print_step() { printf "\n${CYAN}→ %s${NC}\n\n" "$*"; }

check_domain() {
    local domain="$1"
    
    # Add .com if no extension
    if [[ "$domain" != *.* ]]; then
        domain="$domain.com"
    fi
    
    # Only support .com
    if [[ "$domain" != *.com ]]; then
        print_warning "$domain - Only .com supported"
        return
    fi
    
    # Check with whois
    local output
    if output=$(timeout 8 whois "$domain" 2>/dev/null || true); then
        if [[ -n "$output" ]]; then
            if echo "$output" | grep -qi "No match\|Not found\|No Data Found\|No entries found"; then
                print_success "$domain - Available"
            elif echo "$output" | grep -qi "Creation Date\|Created\|Registrar"; then
                print_error "$domain - Taken"
            else
                print_warning "$domain - Unclear"
            fi
        else
            print_warning "$domain - Empty response"
        fi
    else
        print_warning "$domain - Query failed"
    fi
}

show_help() {
    echo "domaincheck - Check .com domain availability"
    echo ""
    echo "Usage:"
    echo "  domaincheck <domain> [domain2 ...]"
    echo "  domaincheck -f <file>"
    echo "  domaincheck -h"
    echo ""
    echo "Examples:"
    echo "  domaincheck example"
    echo "  domaincheck google facebook amazon"
}

# Main logic
if [[ $# -eq 0 || "$1" == "-h" || "$1" == "--help" ]]; then
    show_help
elif [[ "$1" == "-f" ]]; then
    if [[ -f "$2" ]]; then
        while read -r domain; do
            [[ -z "$domain" || "$domain" == \#* ]] && continue
            check_domain "$domain"
            sleep 1
        done < "$2"
    else
        print_error "File not found: $2"
    fi
else
    # Check multiple domains
    if [[ $# -gt 1 ]]; then
        print_step "Checking $# domains"
    fi
    
    for domain in "$@"; do
        check_domain "$domain"
        if [[ $# -gt 1 ]]; then
            sleep 1
        fi
    done
fi